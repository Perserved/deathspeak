{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: teststestet build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "-I${workspaceFolder}/libs/glad/glad",
                "-I${workspaceFolder}/libs/glad/KHR",
                "-I${workspaceFolder}/libs/glfw/include/GLFW",
                "-L${workspaceFolder}/libs/glfw/lib",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/*.h",
                "-o",
                "${workspaceFolder}/bin/deathspeak.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/clang"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: toostas build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-I${workspaceFolder}/libs/glad",
                "-I${workspaceFolder}/libs/glfw/include",
                "-L${workspaceFolder}/libs/glfw/lib",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/glad.c",
                "${workspaceFolder}/src/*.h",
                "-lglfw3dll",
                "-ldl",
                "-o",
                "${workspaceFolder}/bin/deathspeak"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}